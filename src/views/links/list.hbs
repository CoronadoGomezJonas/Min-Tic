<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-header">
                        <h5 class="card-title text-uppercase">
                            {{fullname}}
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="m-2">{{email}}</p>
                        <p class="m-2">{{phone}}</p>
                        <p class="m-2">{{profession}}</p>
                        <hr>
                        <a class="btn btn-danger" href="/links/delete/{{id}}">
                            Delete Link
                        </a>
                        <a class="btn btn-secondary" href="/links/edit/{{id}}">
                            Edit
                        </a>
                    </div>
                    <div class="card-footer">
                        <p class="m-2" style="font-weight: bold;">{{timeago created_at}}</p>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are not Links saved yet.</p>
                    <a href="/links/add">Create One!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>